# .editorconfig (Next.js)
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JavaScript / TypeScript / JSX / TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON (includes package.json, tsconfig.json, etc.)
[*.{json,jsonc}]
indent_size = 2

# YAML (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# Styles
[*.{css,scss,less}]
indent_size = 2

# Markdown: keep trailing spaces (for hard line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Env files
[*.env*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

# Makefiles must use tabs
[Makefile]
indent_style = tab
indent_size = 4
